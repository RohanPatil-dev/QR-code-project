<%- include('./Partials/Header.ejs') %>

<body>
      <div class="container mt-5">
        <h1 class="text-center heading">QR-Code generator</h1>

        <form action="/code" method="post" class="forms">
            <div class="form-group">
              <label for="name" class="text-light">Name</label>
              <input type="text" name="name" class="form-control w-50 w-50" id="name" aria-describedby="emailHelp" placeholder="Enter email">
            </div>

            <div class="form-group">
              <label for="email" class="text-light">Email</label>
              <input type="email" name="email" class="form-control w-50" id="email" placeholder="Password">
            </div>

            <div class="form-group">
                <label for="age" class="text-light">Age</label>
                <input type="number" name="age" class="form-control w-50" id="age" placeholder="Password">
              </div>

              
            <div class="form-group">
                <label for="password" class="text-light">Password</label>
                <input type="password" name="password" class="form-control w-50" id="password" placeholder="Password">
              </div>


            <button type="submit" class="btn btn-primary">Submit</button>
          </form>


            <% if (locals.data) { %>
              <div class="mt-5 bg-dark border text-light text-center mb-3">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Age</th>
                        <th scope="col">Password</th>
                        <th scope="col">Code</th>
                      </tr>
                    </thead>
                    <tbody>
        
                        <% data.forEach(value => { %>
                            <tr>
                                <td scope="row" class="txt"><%= value.id %></td>
                                <td class="txt"><%= value.name %></td>
                                <td class="txt"><%= value.email %></td>
                                <td class="txt"><%= value.age %></td>
                                <td class="txt"><%= value.password.slice(0,10) %></td>
                                <td><img src=<%= value.code %> alt=""></td>
                              </tr>
                        <% }) %>
                    </tbody>
                  </table>
               </div>
            <% } else { %>
                   <p>Data Not Found !</p>
            <% } %>
    </div>
</body>

<%- include('./Partials/Footer.ejs') %>
